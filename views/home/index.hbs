<h1>Welcome to Doner Place!</h1>
<p>We offer a wide variety of tasty doner kebab, cutosmized to your liking. Choose from different sizes of chicken, beef and
    lamb and any topping you want. Place your order now!</p>
<div class="products">
    {{#if currentUser.isAdmin}}
    <h2>Admin</h2>
    <div class="product-card">
        <img src="/img/new.png">
        <a href="/createProduct" class="button product-title">Create Product</a>
    </div>
    {{/if}}
    <h2>Chicken Doner</h2>
    {{#each products.chicken}}
    <div class="product-card">
        <img src="{{this.imageUrl}}">
         {{#if ../currentUser.isAdmin}}
        <a href="/order/edit/{{this._id}}" class="control">
            <img class="control-img" src="/img/edit.png">
        </a>
        <a href="/order/delete/{{this._id}}" class="control">
            <img class="control-img" src="/img/delete.png">
        </a>
        {{else}}
        <a href="/order/{{this._id}}" class="button product-title">Order</a>
        {{/if}}
    </div>
    {{/each}}

    <h2>Beef Doner</h2>
    {{#each products.beef}}
    <div class="product-card">
        <img src="{{this.imageUrl}}"> 
        {{#if ../currentUser.isAdmin}}
        <a href="/order/edit/{{this._id}}" class="control">
            <img class="control-img" src="/img/edit.png">
        </a>
        <a href="/order/delete/{{this._id}}" class="control">
            <img class="control-img" src="/img/delete.png">
        </a>
        {{else}}
        <a href="/order/{{this._id}}" class="button product-title">Order</a>
        {{/if}}
    </div>
    {{/each}}
    <h2>Lamb Doner</h2>
    {{#each products.lamb}}
    <div class="product-card">
        <img src="{{this.imageUrl}}"> 
        {{#if ../currentUser.isAdmin}}
        <a href="/order/edit/{{this._id}}" class="control">
            <img class="control-img" src="/img/edit.png">
        </a>
        <a href="/order/delete/{{this._id}}" class="control">
            <img class="control-img" src="/img/delete.png">
        </a>
        {{else}}
        <a href="/order/{{this._id}}" class="button product-title">Order</a>
        {{/if}}
    </div>
    {{/each}}